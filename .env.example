# Configuration d'environnement pour EduManager
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Sécurité Django
SECRET_KEY=django-insecure-your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de données
# Pour SQLite (développement)
DATABASE_URL=sqlite:///db.sqlite3

# Pour PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/edumanager_db

# Pour MySQL (production)
# DATABASE_URL=mysql://username:password@localhost:3306/edumanager_db

# Email (optionnel)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Stockage des fichiers (optionnel)
# Pour AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=eu-west-1

# Redis (pour le cache, optionnel)
# REDIS_URL=redis://localhost:6379/1

# Sentry (pour le monitoring des erreurs, optionnel)
# SENTRY_DSN=https://your-sentry-dsn

# Configuration de développement
DJANGO_LOG_LEVEL=INFO
DJANGO_SETTINGS_MODULE=school_management.settings
